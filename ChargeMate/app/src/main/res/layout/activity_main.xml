<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/black"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardElevation="20dp"
        android:id="@+id/image"
        android:layout_marginTop="30sp"
        app:cardUseCompatPadding="true"
        android:layout_height="400dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ut"
            />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/slide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:text="Designed and Developed by:      Raj, Shreeyash, Shubham, Vishal"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ChargeMate"
        android:id="@+id/chargemate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:background="#38000000"
        android:shadowColor="@color/black"
        android:textColor="#FF5722"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="60sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chargemate"
        android:textSize="15sp"
        android:text="Monitor | Manage | Move Green"
        android:textStyle="italic"

        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-2sp"
        />



</RelativeLayout>